<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout"
    android:background="@color/app_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_limit_range"
                style="@android:style/TextAppearance.Small"
                android:textColor="@color/app_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 - 1999"/>

            <TextView
                android:id="@+id/textview_limit_street"
                style="@android:style/TextAppearance.Small"
                android:textColor="@color/app_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beryl Street"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_limit_rules"
            style="@android:style/TextAppearance.Small"
            android:textColor="@color/app_secondary"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="65"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="Posted (7am - 10am), NS 1st Thu, SS 1st Wed" />

    </LinearLayout>


</FrameLayout>

