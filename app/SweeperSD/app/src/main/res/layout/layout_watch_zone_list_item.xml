<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout"
    android:background="@drawable/apptheme_action_button"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textview_alarm_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                style="@android:style/TextAppearance.Small"
                android:textColor="@color/app_secondary"
                android:text="120ft radius" />

            <TextView
                android:id="@+id/textview_alarm_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                style="@android:style/TextAppearance.Large"
                android:textColor="@color/app_secondary"
                android:text="1061 Beryl Street" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            style="@android:style/TextAppearance.Small"
            android:textColor="@color/app_secondary"
            android:text="Upcoming Sweeping:" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                style="@android:style/TextAppearance.Medium"
                android:textColor="@color/app_secondary"
                android:text="Scanning location. \nProgress: 0%" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/limit_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#22000000"
                android:padding="@dimen/alarm_view_item_space"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>


</FrameLayout>

