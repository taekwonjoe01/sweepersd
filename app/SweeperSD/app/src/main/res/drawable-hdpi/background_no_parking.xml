<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/parking_sign_background" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:top="3dp"
        android:right="3dp"
        android:left="3dp"
        android:bottom="3dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/parking_sign_no_parking" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:top="6dp"
        android:right="6dp"
        android:left="6dp"
        android:bottom="6dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/parking_sign_background" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>